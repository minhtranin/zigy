{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zigy",
  "version": "1.0.5",
  "identifier": "com.minhcongtran.zigy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zigy",
        "width": 1300,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "frameworks": [
        "resources/libonnxruntime.1.16.3.dylib",
        "resources/libonnxruntime.dylib"
      ],
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Zigy needs microphone access to provide real-time speech recognition captions."
      }
    }
  }
}
