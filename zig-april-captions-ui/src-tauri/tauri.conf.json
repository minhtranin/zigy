{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zigy",
  "version": "1.0.4",
  "identifier": "com.minhcongtran.zigy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zigy",
        "width": 1300,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400,
        "center": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*.so",
      "resources/*.so.*",
      "resources/*.dylib",
      "resources/*.dll",
      "resources/*.exe",
      "resources/zig-april-captions"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "frameworks": [
        "resources/libonnxruntime.1.16.3.dylib",
        "resources/libonnxruntime.dylib",
        "resources/libpulse.0.dylib",
        "resources/libpulse-simple.0.dylib",
        "resources/libpulsecommon-16.1.dylib",
        "resources/libsndfile.1.dylib",
        "resources/libFLAC.8.dylib",
        "resources/libvorbis.0.dylib",
        "resources/libvorbisenc.2.dylib",
        "resources/libogg.0.dylib",
        "resources/libintl.8.dylib",
        "resources/libiomp5.dylib"
      ]
    }
  }
}
