---
// Hero component with download section
---

<section class="hero dark-bg">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Zipy</h1>
      <p class="hero-subtitle">Real-time Speech-to-Text Captions Desktop App</p>
      <p class="hero-description">
        Turn your voice into text instantly with AI-powered speech recognition.
        Perfect for meetings, lectures, accessibility, and live captions.
      </p>

      <div class="download-section">
        <h2>Download Zipy</h2>
        <p class="version-info">Latest version: <span id="version-number">Loading...</span></p>

        <div class="download-buttons">
          <a href="#" id="download-windows" class="download-btn windows" style="display:none;">
            <span class="icon">ü™ü</span>
            <div class="btn-text">
              <strong>Windows</strong>
              <small>Windows 10/11 (UI only)</small>
            </div>
          </a>

          <a href="#" id="download-macos" class="download-btn macos" style="display:none;">
            <span class="icon">üçé</span>
            <div class="btn-text">
              <strong>macOS</strong>
              <small>Apple Silicon (M1/M2/M3/M4)</small>
            </div>
          </a>

          <a href="#" id="download-linux-deb" class="download-btn linux" style="display:none;">
            <span class="icon">üêß</span>
            <div class="btn-text">
              <strong>Linux (Debian)</strong>
              <small>Ubuntu, Debian, Mint</small>
            </div>
          </a>

          <a href="#" id="download-linux-appimage" class="download-btn linux" style="display:none;">
            <span class="icon">üêß</span>
            <div class="btn-text">
              <strong>Linux (AppImage)</strong>
              <small>Universal Linux</small>
            </div>
          </a>
        </div>

        <p class="download-note">
          Free and open source ‚Ä¢ <a href="https://github.com/minhtranin/zigy" target="_blank">View on GitHub</a>
        </p>
      </div>

      <div class="quick-features">
        <div class="feature-badge">üé§ Real-time Speech Recognition</div>
        <div class="feature-badge">üí¨ AI-Powered Assistance</div>
        <div class="feature-badge">üåê Multi-language Support</div>
      </div>
    </div>
  </div>
</section>

<script>
  // Fetch latest release from GitHub API
  async function loadLatestRelease() {
    try {
      const response = await fetch('https://api.github.com/repos/minhtranin/zigy/releases/latest');
      if (!response.ok) throw new Error('Failed to fetch release');

      const release = await response.json();

      // Update version number
      const versionEl = document.getElementById('version-number');
      if (versionEl) versionEl.textContent = release.tag_name;

      // Find download links
      const assets = release.assets;

      const windowsAsset = assets.find(a => a.name.endsWith('.exe'));
      const macosAsset = assets.find(a => a.name.endsWith('.dmg'));
      const debAsset = assets.find(a => a.name.endsWith('.deb'));
      const appimageAsset = assets.find(a => a.name.endsWith('.AppImage'));

      // Update download buttons
      if (windowsAsset) {
        const btn = document.getElementById('download-windows');
        if (btn) {
          btn.href = windowsAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (macosAsset) {
        const btn = document.getElementById('download-macos');
        if (btn) {
          btn.href = macosAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (debAsset) {
        const btn = document.getElementById('download-linux-deb');
        if (btn) {
          btn.href = debAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (appimageAsset) {
        const btn = document.getElementById('download-linux-appimage');
        if (btn) {
          btn.href = appimageAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }
    } catch (error) {
      console.error('Error loading releases:', error);
      // Fallback to releases page
      const fallbackLink = 'https://github.com/minhtranin/zigy/releases/latest';
      document.querySelectorAll('.download-btn').forEach(btn => {
        btn.href = fallbackLink;
        btn.style.display = 'flex';
      });
      const versionEl = document.getElementById('version-number');
      if (versionEl) versionEl.textContent = 'Check releases';
    }
  }

  // Load on page ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadLatestRelease);
  } else {
    loadLatestRelease();
  }
</script>

<style>
  .hero {
    padding: 1.5rem 0;
    min-height: 50vh;
    display: flex;
    align-items: center;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    opacity: 0.95;
    line-height: 1.3;
    color: #EDEBFF;
    font-weight: 500;
  }

  .hero-description {
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    opacity: 0.85;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.4;
    color: #EDEBFF;
  }

  .download-section {
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    padding: 1.25rem;
    margin: 1.5rem 0;
  }

  .download-section h2 {
    font-size: 1.15rem;
    margin-bottom: 0.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .version-info {
    margin-bottom: 1rem;
    opacity: 0.85;
    font-size: 0.8rem;
  }

  .download-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.6rem;
    margin-bottom: 1rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.65rem 1rem;
    background: rgba(255, 255, 255, 0.95);
    color: #111827;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    font-size: 12px;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    background: white;
  }

  .download-btn .icon {
    font-size: 1.4rem;
    line-height: 1;
  }

  .btn-text {
    text-align: left;
    flex: 1;
  }

  .btn-text strong {
    display: block;
    font-size: 0.85rem;
    margin-bottom: 0.05rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .btn-text small {
    display: block;
    color: #6B7280;
    font-size: 0.7rem;
    line-height: 1.2;
  }

  .download-note {
    opacity: 0.8;
    font-size: 0.75rem;
    color: #EDEBFF;
  }

  .download-note a {
    color: white;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .quick-features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.25rem;
  }

  .feature-badge {
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1rem 0;
      min-height: auto;
    }

    .hero-title {
      font-size: 1.6rem;
    }

    .hero-subtitle {
      font-size: 0.9rem;
    }

    .hero-description {
      font-size: 0.85rem;
      margin-bottom: 1rem;
    }

    .download-section {
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 14px;
    }

    .download-buttons {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .quick-features {
      gap: 0.4rem;
      margin-top: 1rem;
    }

    .feature-badge {
      font-size: 0.75rem;
      padding: 0.3rem 0.65rem;
    }
  }
</style>
