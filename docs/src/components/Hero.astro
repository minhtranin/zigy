---
// Hero component with download section
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="download" class="hero dark-bg">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">{t('hero.title')}</h1>
      <p class="hero-subtitle">{t('hero.subtitle')}</p>
      <p class="hero-description">
        {t('hero.description')}
      </p>

      <div class="download-section">
        <h2>{t('hero.download')}</h2>
        <p class="version-info">{t('hero.version')} <span id="version-number">{t('hero.loading')}</span></p>

        <div class="download-buttons">
          <a href="#" id="download-windows" class="download-btn windows" style="display:none;">
            <span class="icon">ü™ü</span>
            <div class="btn-text">
              <strong>{t('hero.windows')}</strong>
              <small>{t('hero.windows.subtitle')}</small>
            </div>
          </a>

          <a href="#" id="download-macos" class="download-btn macos" style="display:none;">
            <span class="icon">üçé</span>
            <div class="btn-text">
              <strong>{t('hero.macos')}</strong>
              <small>{t('hero.macos.subtitle')}</small>
            </div>
          </a>

          <a href="#" id="download-linux-deb" class="download-btn linux" style="display:none;">
            <span class="icon">üêß</span>
            <div class="btn-text">
              <strong>{t('hero.linux.debian')}</strong>
              <small>{t('hero.linux.debian.subtitle')}</small>
            </div>
          </a>

          <a href="#" id="download-linux-appimage" class="download-btn linux" style="display:none;">
            <span class="icon">üêß</span>
            <div class="btn-text">
              <strong>{t('hero.linux.appimage')}</strong>
              <small>{t('hero.linux.appimage.subtitle')}</small>
            </div>
          </a>
        </div>

        <p class="download-note">
          {t('hero.opensource')} <a href="https://github.com/minhtranin/zigy" target="_blank">{t('hero.github')}</a>
        </p>
      </div>

      <div class="quick-features">
        <div class="feature-badge">{t('hero.feature.realtime')}</div>
        <div class="feature-badge">{t('hero.feature.ai')}</div>
        <div class="feature-badge">{t('hero.feature.multilang')}</div>
      </div>
    </div>
  </div>
</section>

<script>
  // Fetch latest release from GitHub API
  async function loadLatestRelease() {
    try {
      const response = await fetch('https://api.github.com/repos/minhtranin/zigy/releases/latest');
      if (!response.ok) throw new Error('Failed to fetch release');

      const release = await response.json();

      // Update version number
      const versionEl = document.getElementById('version-number');
      if (versionEl) versionEl.textContent = release.tag_name;

      // Find download links
      const assets = release.assets;

      const windowsAsset = assets.find(a => a.name.endsWith('.exe'));
      const macosAsset = assets.find(a => a.name.endsWith('.dmg'));
      const debAsset = assets.find(a => a.name.endsWith('.deb'));
      const appimageAsset = assets.find(a => a.name.endsWith('.AppImage'));

      // Update download buttons
      if (windowsAsset) {
        const btn = document.getElementById('download-windows');
        if (btn) {
          btn.href = windowsAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (macosAsset) {
        const btn = document.getElementById('download-macos');
        if (btn) {
          btn.href = macosAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (debAsset) {
        const btn = document.getElementById('download-linux-deb');
        if (btn) {
          btn.href = debAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }

      if (appimageAsset) {
        const btn = document.getElementById('download-linux-appimage');
        if (btn) {
          btn.href = appimageAsset.browser_download_url;
          btn.style.display = 'flex';
        }
      }
    } catch (error) {
      console.error('Error loading releases:', error);
      // Fallback to releases page
      const fallbackLink = 'https://github.com/minhtranin/zigy/releases/latest';
      document.querySelectorAll('.download-btn').forEach(btn => {
        btn.href = fallbackLink;
        btn.style.display = 'flex';
      });
      const versionEl = document.getElementById('version-number');
      if (versionEl) versionEl.textContent = 'Check releases';
    }
  }

  // Load on page ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadLatestRelease);
  } else {
    loadLatestRelease();
  }
</script>

<style>
  .hero {
    padding: 2rem 0;
    min-height: 55vh;
    display: flex;
    align-items: center;
    position: relative;
  }

  .hero-content {
    text-align: center;
    max-width: 750px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: 2.25rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, #ffffff 0%, #A5B4FC 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.05rem;
    margin-bottom: 0.5rem;
    opacity: 0.95;
    line-height: 1.3;
    color: #E0E7FF;
    font-weight: 500;
  }

  .hero-description {
    font-size: 0.9rem;
    margin-bottom: 1.75rem;
    opacity: 0.8;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
    color: #C7D2FE;
  }

  .download-section {
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1.5rem;
    margin: 1.75rem 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .download-section h2 {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: #F9FAFB;
  }

  .version-info {
    margin-bottom: 1.1rem;
    opacity: 0.75;
    font-size: 0.8rem;
    color: #9CA3AF;
  }

  .download-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.65rem;
    margin-bottom: 1.1rem;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    padding: 0.7rem 1rem;
    background: rgba(255, 255, 255, 0.92);
    color: #111827;
    text-decoration: none;
    border-radius: 14px;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
    font-size: 12px;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
  }

  .download-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(108, 92, 231, 0.1) 0%, rgba(139, 92, 246, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .download-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    background: white;
    border-color: rgba(108, 92, 231, 0.3);
  }

  .download-btn:hover::before {
    opacity: 1;
  }

  .download-btn .icon {
    font-size: 1.5rem;
    line-height: 1;
    position: relative;
    z-index: 1;
  }

  .btn-text {
    text-align: left;
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .btn-text strong {
    display: block;
    font-size: 0.9rem;
    margin-bottom: 0.05rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .btn-text small {
    display: block;
    color: #6B7280;
    font-size: 0.7rem;
    line-height: 1.2;
  }

  .download-note {
    opacity: 0.7;
    font-size: 0.75rem;
    color: #9CA3AF;
  }

  .download-note a {
    color: #A5B4FC;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .download-note a:hover {
    color: #C7D2FE;
    text-decoration: underline;
  }

  .quick-features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .feature-badge {
    background: rgba(139, 92, 246, 0.15);
    border: 1px solid rgba(139, 92, 246, 0.2);
    padding: 0.4rem 0.85rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 500;
    color: #E0E7FF;
    transition: all 0.2s ease;
  }

  .feature-badge:hover {
    background: rgba(139, 92, 246, 0.25);
    border-color: rgba(139, 92, 246, 0.35);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1.25rem 0;
      min-height: auto;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .hero-subtitle {
      font-size: 0.95rem;
    }

    .hero-description {
      font-size: 0.85rem;
      margin-bottom: 1.25rem;
    }

    .download-section {
      padding: 1.15rem;
      margin: 1.25rem 0;
      border-radius: 16px;
    }

    .download-buttons {
      grid-template-columns: 1fr;
      gap: 0.55rem;
    }

    .quick-features {
      gap: 0.4rem;
      margin-top: 1.15rem;
    }

    .feature-badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.7rem;
    }
  }
</style>
