<style>
  .footer {
    background: #111827;
    color: #F9FAFB;
    padding: 1.75rem 0 1.1rem;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(139, 92, 246, 0.3) 50%, transparent 100%);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1.35rem;
    margin-bottom: 1.35rem;
    position: relative;
    z-index: 1;
  }

  .footer-section h3 {
    font-size: 1.15rem;
    margin-bottom: 0.4rem;
    color: white;
    font-weight: 600;
    background: linear-gradient(135deg, #ffffff 0%, #A5B4FC 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-section h4 {
    font-size: 0.9rem;
    margin-bottom: 0.4rem;
    color: #9CA3AF;
    font-weight: 500;
  }

  .footer-section p {
    color: #9CA3AF;
    line-height: 1.4;
    font-size: 0.82rem;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section li {
    margin-bottom: 0.3rem;
    font-size: 0.82rem;
  }

  .footer-section a {
    color: #A5B4FC;
    text-decoration: none;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .footer-section a:hover {
    color: #C4B5FD;
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid rgba(55, 65, 81, 0.8);
    padding-top: 1.1rem;
    text-align: center;
    color: #9CA3AF;
    font-size: 0.8rem;
    position: relative;
    z-index: 1;
  }

  .footer-bottom p {
    margin-bottom: 0.35rem;
  }

  .footer-bottom a {
    color: #A5B4FC;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .footer-bottom a:hover {
    color: #C4B5FD;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 1.4rem 0 0.9rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.1rem;
    }

    .footer-section h3 {
      font-size: 1.05rem;
    }

    .footer-section h4 {
      font-size: 0.85rem;
    }
  }
</style>
