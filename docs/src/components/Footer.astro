<style>
  .footer {
    background: #111827;
    color: #F9FAFB;
    padding: 2rem 0 1.25rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .footer-section h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: white;
    font-weight: 600;
  }

  .footer-section h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: #9CA3AF;
    font-weight: 500;
  }

  .footer-section p {
    color: #9CA3AF;
    line-height: 1.4;
    font-size: 0.9rem;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section li {
    margin-bottom: 0.375rem;
    font-size: 0.9rem;
  }

  .footer-section a {
    color: #6C5CE7;
    text-decoration: none;
    transition: color 0.2s;
    font-weight: 500;
  }

  .footer-section a:hover {
    color: #5A4BD8;
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 1.25rem;
    text-align: center;
    color: #9CA3AF;
    font-size: 0.85rem;
  }

  .footer-bottom p {
    margin-bottom: 0.5rem;
  }

  .footer-bottom a {
    color: #6C5CE7;
    text-decoration: none;
    font-weight: 500;
  }

  .footer-bottom a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 1.5rem 0 1rem;
    }
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
    .footer-section h3 {
      font-size: 1.1rem;
    }
    .footer-section h4 {
      font-size: 0.95rem;
    }
  }
</style>
