<script>
  // Smooth scroll to sections
  document.querySelectorAll('.nav-link[data-section]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      var el = e.currentTarget;
      var section = el.dataset.section;
      var target = document.getElementById(section || '');

      if (target) {
        e.preventDefault();
        var headerHeight = 60;
        var targetPosition = target.getBoundingClientRect().top + window.scrollY - headerHeight;

        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });

        // Don't set active here - let scroll handler manage it
      }
    });
  });

  // Highlight active section on scroll
  var sections = ['download', 'demo', 'features', 'installation', 'help'];

  function updateActiveNav() {
    var scrollPosition = window.scrollY + 120; // Offset for header
    var currentSection = null;
    var closestDistance = Infinity;

    // Find the section closest to current scroll position
    for (var i = 0; i < sections.length; i++) {
      var sectionId = sections[i];
      var section = document.getElementById(sectionId);

      if (section) {
        var sectionTop = section.offsetTop - 120;
        var distance = Math.abs(scrollPosition - sectionTop);

        // If we've scrolled past this section and it's closer than previous matches
        if (scrollPosition >= sectionTop && distance < closestDistance) {
          closestDistance = distance;
          currentSection = sectionId;
        }
      }
    }

    // If no section detected, highlight first section
    if (!currentSection) {
      currentSection = 'download';
    }

    // Update active state
    if (currentSection) {
      document.querySelectorAll('.nav-link[data-section]').forEach(function(link) {
        link.classList.remove('active');
        if (link.dataset.section === currentSection) {
          link.classList.add('active');
        }
      });
    }
  }

  var scrollTimeout;
  window.addEventListener('scroll', function() {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(updateActiveNav, 50);
  });

  updateActiveNav();

  // Language switcher
  var langSelector = document.getElementById('lang-selector');
  if (langSelector) {
    langSelector.addEventListener('change', function(e) {
      var newLang = e.target.value;
      var currentPath = window.location.pathname;
      var basePath = '/zigy';
      var newPath;

      // Remove current language prefix if exists
      currentPath = currentPath.replace('/zigy/vi', '/zigy').replace('/zigy', '');

      if (newLang === 'en') {
        newPath = basePath + currentPath;
      } else {
        newPath = basePath + '/' + newLang + currentPath;
      }

      // Default to home if path is empty
      if (newPath === basePath + '/' + newLang || newPath === basePath) {
        newPath = newPath + '/';
      }

      window.location.href = newPath;
    });
  }
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(17, 24, 39, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    height: 60px;
  }

  .header-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-icon {
    width: 32px;
    height: 32px;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
    letter-spacing: -0.02em;
  }

  .nav-tabs {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .nav-link.active {
    color: white;
    background: rgba(108, 92, 231, 0.3);
  }

  .nav-icon {
    font-size: 1rem;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .github-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: rgba(255, 255, 255, 0.7);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .github-link:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 0 1rem;
      gap: 1rem;
    }

    .nav-tabs {
      gap: 0;
    }

    .nav-link {
      padding: 0.4rem 0.5rem;
      font-size: 0.8rem;
    }

    .nav-text {
      display: none;
    }

    .nav-icon {
      font-size: 1.1rem;
    }

    .logo-text {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .nav-link {
      padding: 0.35rem 0.4rem;
    }
  }

  /* Language Switcher */
  .lang-select {
    padding: 0.4rem 0.6rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 6px;
    color: white;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    outline: none;
  }

  .lang-select:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(139, 92, 246, 0.5);
  }

  .lang-select:focus {
    border-color: rgba(139, 92, 246, 0.8);
  }

  .lang-select option {
    background: #1F2937;
    color: white;
  }

  @media (max-width: 768px) {
    .lang-select {
      padding: 0.35rem 0.5rem;
      font-size: 0.8rem;
    }
  }
</style>
