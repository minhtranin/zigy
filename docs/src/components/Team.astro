          <p class="member-role">{t('team.claude.role')}</p>
          <p class="member-description">{t('team.claude.description')}</p>
        </div>

        <div class="team-member">
          <div class="member-icon">ðŸ’Ž</div>
          <h3 class="member-name">{t('team.gemini.name')}</h3>
          <p class="member-role">{t('team.gemini.role')}</p>
          <p class="member-description">{t('team.gemini.description')}</p>
        </div>

