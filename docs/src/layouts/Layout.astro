---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import type { Language } from '../i18n/languages';
import Header from '../components/Header.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
  showHeader?: boolean;
}

const lang = Astro.props.lang || getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {
  title = t('page.title'),
  description = t('page.description'),
  showHeader = true
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/zigy/favicon.svg" />

    <title>{title}</title>
  </head>
  <body class={showHeader ? 'has-header' : ''}>
    {showHeader && <Header />}
    <LanguageSwitcher />
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.4;
    color: #111827;
    background: #ffffff;
    font-size: 14px;
  }

  body.has-header {
    padding-top: 60px;
  }

  /* Dark background for hero */
  .dark-bg {
    background: #111827;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .dark-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at top, rgba(108, 92, 231, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  /* Container */
  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Color palette utility classes */
  .text-primary {
    color: #111827;
  }
  .text-secondary {
    color: #4B5563;
  }
  .text-muted {
    color: #9CA3AF;
  }
  .text-link {
    color: #6C5CE7;
  }
  .bg-sidebar {
    background-color: #F9FAFB;
  }
  .bg-table-header {
    background-color: #F3F4F6;
  }
  .bg-row-hover {
    background-color: #F9FAFB;
  }
  .border-color {
    border-color: #E5E7EB;
  }

  /* Compact spacing */
  .compact-section {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }
    .compact-section {
      padding-top: 1.25rem;
      padding-bottom: 1.25rem;
    }
  }
</style>
